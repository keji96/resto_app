<h1>Menu</h1>
<hr>
<div class="row">


<table class="menuTable u-full-width">

  <tr >
    <th >
      Item
    </th>
     <th>
       Price
     </th>
     <th>
       Cusine
     </th>
     <th>
       Allergens
     </th>


 <%@fooditems.each do |fooditem|%>

 <tr>
   <td >
     <%=fooditem.name%>
    </td>
    <td>
      <%=fooditem.price%>
    </td>
    <td>
      <%=fooditem.cusine%>
    </td>
    <td>
      <%=fooditem.allergens%>
    </td>
    <td>
      <form action="/fooditems/<%=fooditem.id%>/edit">
        <input class="menuButton twelve columns" type="submit" value="E">
      </form>
      <form action="/fooditems/<%=fooditem.id%>" method="post">
        <input type="hidden" name="_method" value="delete">
        <input class="menuButton twelve columns" type="submit" value="R">
      </form>
    </td>
  </tr>

<% end%>
</table>
</div>

<form action="/fooditems/new">
  <input class="twelve columns" type="submit" value="Add Item">
</form>
<form action="/">
  <input class="twelve columns" type="submit" value="Main Menu">
</form>
